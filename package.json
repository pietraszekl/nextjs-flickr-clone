{
  "name": "nextjs-flickr",
  "author": "Lukasz Pietraszek",
  "version": "0.1.0",
  "license": "MIT",
  "description": "Flickr Clone",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pietraszekl/nextjs-flickr-clone.git"
  },
  "bugs": {
    "url": "https://github.com/pietraszekl/nextjs-flickr-clone/issues"
  },
  "homepage": "https://github.com/pietraszekl/nextjs-flickr-clone#readme",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "commit": "git-cz",
    "lint": "eslint . --ext .json --ext .js",
    "prettier": "prettier --write \"**/*.{html,js,md,yml,ts,tsx}\""
  },
  "dependencies": {
    "cz-conventional-changelog": "^3.3.0",
    "lint": "^0.7.0",
    "lint-staged": "^10.5.4",
    "next": "10.1.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "swr": "^0.5.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@commitlint/prompt": "^12.1.1",
    "@types/node": "^14.14.37",
    "@types/react": "^17.0.3",
    "eslint-config-get-off-my-lawn": "^6.0.0",
    "commitizen": "^4.2.3",
    "husky": "^6.0.0",
    "postcss-preset-env": "^6.7.0",
    "tailwindcss": "^2.0.4",
    "typescript": "^4.2.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "*.{html,js,md,yml,ts,tsx,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
